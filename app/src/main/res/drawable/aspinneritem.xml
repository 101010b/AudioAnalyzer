<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF004000" />
            <stroke
                android:width="1dp"
                android:color="#FF00FF00" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#FF000000" />
            <!--gradient
                android:startColor="#FF000000"
                android:endColor="#FF003000"
                android:angle="90" / -->
            <stroke
                android:width="1dp"
                android:color="#FF004000" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>